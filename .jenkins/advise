pipeline {
    agent any
    tools {
        maven 'maven-3.9.6'
        jdk 'ZULU8'
    }
    environment {
        MIRROR_BASEDIR = "${env.WORKSPACE}/.database/ae-vulnerability-mirror"
    }
    stages {
        stage('Pull artifact from server') {
            steps {
                sh '''
                mkdir -p .database/ae-vulnerability-mirror/index
                wget -r -np -nH --cut-dirs=3 -P .database/ae-vulnerability-mirror/index -R "index.html*" http://ae-scanner/mirror/index/
                '''
            }
        }

        stage('Build with extract profile') {
            steps {
                withMaven(maven: 'maven-3.9.6') {
                    sh 'mvn -B clean install -Pextract'
                }
            }
        }

        stage('Build with advise profile') {
            steps {
                withMaven(maven: 'maven-3.9.6') {
                    sh 'mvn -B clean install -Padvise -Dinput.database=$MIRROR_BASEDIR'
                }
            }
        }

        stage('Build with report profile') {
            steps {
                withMaven(maven: 'maven-3.9.6') {
                    sh 'mvn -B clean install -Preport -Dinput.database=$MIRROR_BASEDIR'
                }
            }
        }
    }
}
